{
    "version": "1.2.1",
    "name": "nauč-se",
    "short_name": "Translator",
    "description": "Vytvořil : Dominik Hradecký",
    "manifest_version": 3,

    "permissions" :
    [
        "tabs",
        "storage",
        "activeTab",
        "scripting",
        "contextMenus"
    ],

    "background" :
    {
        "service_worker" : "background.js"
    },

    "action" :
    {

        "default_popup" : "index.html"
    },
    "host_permissions" :
    [
        "<all_urls>",
        "https://*/*",
        "http://*/*"
    ],
    "icons":
    {
        "128": "logo_128x128.png"
    }
}
